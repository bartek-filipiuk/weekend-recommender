---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  message?: string;
}

const { size = 'md', message } = Astro.props;

const sizeClasses = {
  sm: 'h-6 w-6',
  md: 'h-12 w-12',
  lg: 'h-16 w-16',
};
---

<div class="flex flex-col items-center justify-center space-y-4">
  <div
    class={`animate-spin rounded-full border-4 border-gray-200 border-t-indigo-600 ${sizeClasses[size]}`}
    role="status"
    aria-label="Loading"
  >
  </div>
  {message && (
    <p class="text-sm text-gray-600 animate-pulse">{message}</p>
  )}
</div>
