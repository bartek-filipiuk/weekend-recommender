---
interface Props {
  rank: number;
  name: string;
  description: string;
  location: string;
  cost: string;
  reasoning: string;
}

const { rank, name, description, location, cost, reasoning } = Astro.props;

// Rank medals
const medals = {
  1: 'ðŸ¥‡',
  2: 'ðŸ¥ˆ',
  3: 'ðŸ¥‰',
};

const rankEmoji = medals[rank as keyof typeof medals] || `#${rank}`;
---

<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  <!-- Rank Badge -->
  <div class="flex items-start justify-between mb-4">
    <div class="flex items-center space-x-2">
      <span class="text-3xl" aria-label={`Rank ${rank}`}>{rankEmoji}</span>
      <h3 class="text-xl font-bold text-gray-900">{name}</h3>
    </div>
  </div>

  <!-- Description -->
  <p class="text-gray-700 mb-4 leading-relaxed">
    {description}
  </p>

  <!-- Details Grid -->
  <div class="grid grid-cols-2 gap-4 mb-4">
    <!-- Location -->
    <div class="flex items-start space-x-2">
      <svg
        class="h-5 w-5 text-gray-400 flex-shrink-0 mt-0.5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
        ></path>
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
        ></path>
      </svg>
      <div>
        <p class="text-xs text-gray-500 uppercase tracking-wide">Location</p>
        <p class="text-sm text-gray-900 font-medium">{location}</p>
      </div>
    </div>

    <!-- Cost -->
    <div class="flex items-start space-x-2">
      <svg
        class="h-5 w-5 text-gray-400 flex-shrink-0 mt-0.5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        ></path>
      </svg>
      <div>
        <p class="text-xs text-gray-500 uppercase tracking-wide">Cost</p>
        <p class="text-sm text-gray-900 font-medium">{cost}</p>
      </div>
    </div>
  </div>

  <!-- Reasoning -->
  <div class="border-t border-gray-200 pt-4">
    <p class="text-xs text-gray-500 uppercase tracking-wide mb-2">Why this recommendation</p>
    <p class="text-sm text-gray-600 italic">
      {reasoning}
    </p>
  </div>
</div>
